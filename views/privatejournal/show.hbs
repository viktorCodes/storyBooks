<div class="row">
    <div class="col s12 m8">
        <h3>{{privatejournal.title}}
            <small>{{{editIcon privatejournal.user user privatejournal._id false}}}</small>
        </h3>
        <div class="card journal">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{privatejournal.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{privatejournal.user.displayName}}</span>
                <img src="{{privatejournal.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/privatejournal/user/{{privatejournal.user._id}}">More From {{privatejournal.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>