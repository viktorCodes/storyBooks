<h3>Edit  Story</h3>

<div class="row">

    <form action="/journal/{{journal._id}}" method="POST" class="col s12">
   <input type="hidden" name="_method" value="PUT">
    <div class="row">

        <div class="input-field">
            <input type="text" id="title" name="title" value="{{journal.title}}">
            <label for="title">Title</label>
        </div>
    </div>

      

    <div class="row">

        <div class="input-field">
            <select name="status" id="status">
                {{#select journal.status}}
                <option value="public" selected>Public</option>
                <option value="private">Private</option>
                {{/select}}
             
            </select>
               <label for="status">Status</label>
        </div>
    </div>
     <div class="input-field">
            <select name="type" id="type">
                {{#select journal.type}}
                <option value="public" selected>Food Diary</option>
                <option value="public">Health Diary</option>
                <option value="public">Education Diary</option>
                <option value="public">Kids Diary</option>
                <option value="public">Secret Diary</option>
                <option value="public">Work Diary</option>
                <option value="public">Finance Diary</option>
                <option value="public">Electronic Diary</option>
                <option value="public">Relationship Diary</option>
                {{/select}}
             
        </select>
               <label for="type">Type</label>
        </div>
    </div>
    <div class="row">

        <div class="input-field">
            <h5>Tell US Your Story:</h5>
            <textarea name="body" id="body">{{journal.body}}</textarea>
        </div>
    </div>

    <div class="row">

        <input type="submit" value="Save" class="btn">
        <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
    </form>

</div>